@model MovieHunter.Models.Reservation

@{
    ViewData["Title"] = "Edit";
}



<div class="row" style="justify-content:center;">
    <h4 style="text-align:center">Modify your reservation</h4>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReservationId" />
            <div class="form-group">
                <label asp-for="TicketNumbers" class="control-label">Number of tickets</label>
                <input asp-for="TicketNumbers" class="form-control" />
                <span asp-validation-for="TicketNumbers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationTime" class="control-label">Reservation time</label>
                <input asp-for="ReservationTime" class="form-control" />
                <span asp-validation-for="ReservationTime" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="MovieId" class="control-label">Change movie to</label>
                <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Email</label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="w-100 btn btn-primary" style="margin-top:30px" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
