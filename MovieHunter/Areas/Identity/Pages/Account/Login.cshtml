@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<style>
    body{
        background-image:url(/background.jpg);
        
        background-size: cover;
    }
    
    .form-group{
        width:60%;
    }
</style>

<main>
<div class="row loginCenter" style="place-content=center">
    <div class="col-md-4">
        <section>
                <form id="account" method="post" style="text-align: -webkit-center;">

                <img class="align-content-center 30size" src="~/images/img.png" style="width:30%" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group btnLogin">
                    <button type="submit" class="btn btn-primary" style="width:90px">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>

                </div>
            </form>
        </section>
    </div>
</div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
